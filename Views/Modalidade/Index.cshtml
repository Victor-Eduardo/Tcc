@model IEnumerable<Tcc_Senai.Models.Modalidade>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de modalidade</title>
</head>
<body>
    <div class="col-12" style="overflow-x: auto;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeModalidade)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeModalidade)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdModalidade" class="i-font-20 icone-link"><i class="fas fa-pencil-alt"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.IdModalidade" class="i-font-20 icone-link"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
     </div>

    <div class="dr-icon icone-link">
        <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
    </div>
</body>
</html>
