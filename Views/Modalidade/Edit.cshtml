@model Tcc_Senai.Models.Modalidade

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>

<div class="row">
    <div class="col-12 col-sm-12 col-md-6 offset-md-3">
         <h2 class="title-view">Alterar Modalidade</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdModalidade" />
            <div class="form-group">
                <label asp-for="NomeModalidade" class="control-label"></label>
                <input asp-for="NomeModalidade" class="form-control" />
                <span asp-validation-for="NomeModalidade" class="text-danger"></span>
            </div>

            <div class="btn-icons" ,>
                <a asp-action="Index" class="i-font-50">
                    <i class="fas fa-chevron-circle-left"></i>
                </a>
                <button class="btn-submit i-font-50"><i class="fas fa-save"></i></button>
            </div>
        </form>
    </div>
</div>

