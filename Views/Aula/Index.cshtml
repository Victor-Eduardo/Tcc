@model IEnumerable<Tcc_Senai.Models.Aula>

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />

    </environment>
}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Aulas
    </div>
    <div class="col-12 content-view">
        <table id="tabela_aulas" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Turma.Sigla)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HorarioInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HorarioFim)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnidadeCurricular.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Funcionario.NomeCompleto)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Turma.Sigla)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorarioInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorarioFim)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnidadeCurricular.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Funcionario.NomeCompleto)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="i-font-20 icone-link"><i class="fas fa-pencil-alt"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="i-font-20 icone-link"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dr-icon icone-link">
        <div class="row">
            <div class="col-6">
                <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
            </div>
            <div class="col-6">
                <a class="btn-modal i-font-50"><i class="far fa-question-circle"></i></a>
            </div>
        </div>
    </div>

    <div class="modal-help">
        <div class="help-content">
            <button class="close-modal">X</button>
            <img class="img-modal" src="~/images/responsivo/img-modal.png" />
        </div>
    </div>

    <script src="~/js/Layout/Index.js"></script>
</div>
