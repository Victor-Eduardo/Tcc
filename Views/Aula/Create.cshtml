@model Tcc_Senai.Models.Aula

@{
   ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Criar Aula</title>
</head>
<body>
    <div class="container">
        @if (ViewData["MSG_E"] != null)
        {
            <p class="alert alert-danger"> @ViewData["MSG_E"] </p>
        }
        <div class="col-12 col-sm-12 col-md-6 offset-md-3">
            <h2 class="title-view">Cadastrar Aula</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="IdTurma" class="control-label"></label>
                    <select asp-for="IdTurma" class="form-control" asp-items="@(new SelectList(@ViewBag.Turmas, "Id", "Sigla"))"></select>
                </div>

                <div class="form-group">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HorarioInicio" class="control-label"></label>
                    <input asp-for="HorarioInicio" class="form-control" />
                    <span asp-validation-for="HorarioInicio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HorarioFim" class="control-label"></label>
                    <input asp-for="HorarioFim" class="form-control" />
                    <span asp-validation-for="HorarioFim" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdUc" class="control-label"></label>
                    <select asp-for="IdUc" class="form-control" asp-items="@(new SelectList(@ViewBag.Unidades, "Id", "Nome"))"></select>
                </div>

                <div class="form-group">
                    <label asp-for="IdFunc" class="control-label"></label>
                    <select asp-for="IdFunc" class="form-control" asp-items="@(new SelectList(@ViewBag.Funcionarios, "Id", "NomeCompleto"))"></select>
                </div>

                <div class="btn-icons" ,>
                    <a asp-action="Index" class="i-font-50">
                        <i class="fas fa-chevron-circle-left"></i>
                    </a>
                    <button class="btn-submit i-font-50"><i class="fas fa-save"></i></button>
                </div>

            </form>

        </div>

    </div>

    @*section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }*@
</body>
</html>
