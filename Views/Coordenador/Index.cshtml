@model IEnumerable<Tcc_Senai.Models.Coordenador>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Coordenadores</title>
</head>
<body>
    <div class="card-header text-white bg-primary text-center h1">
        COORDENADOR
    </div>
    <div class="col-12 content-view">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeCompleto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeDoUsuario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sexo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoDeAcesso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Senha)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeCompleto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeDoUsuario)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sexo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoDeAcesso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Senha)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdCoordenador" class="i-font-20 icone-link"><i class="fas fa-pencil-alt"></i></a> |
                            <a asp-action="Delete" asp-route-id="@item.IdCoordenador" class="i-font-20 icone-link"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dr-icon icone-link">
        <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
    </div>
</body>
</html>
