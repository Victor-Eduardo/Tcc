@model IEnumerable<Tcc_Senai.Models.Turma>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />

    </environment>

}
@if (@TempData["Message"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Turmas
    </div>
    <div class="col-12 content-view">
        <table id="tabela_turmas" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Curso.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sigla)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ano)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Semestre)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Curso.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modulo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sigla)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Semestre)
                        </td>

                        <td>
                            <a asp-action="Cronograma" asp-route-id="@item.Id" class="i-font-20 icone-link"><i class="far fa-calendar-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>