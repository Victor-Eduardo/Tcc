@model Tcc_Senai.Models.Turma

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}


<div class="container">
    <div class="col-12 col-sm-12 col-md-6 offset-md-3">
        <h2 class="title-view">Cadastrar Turma</h2>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdCurso" class="control-label"></label>
                <select asp-for="IdCurso" class="form-control" asp-items="@(new SelectList(@ViewBag.Cursos, "Id", "Nome"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="Modulo" class="control-label"></label>
                <input asp-for="Modulo" class="form-control" />
                <span asp-validation-for="Modulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sigla" class="control-label"></label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semestre" class="control-label"></label>
                <select asp-for="Semestre" class="form-control" asp-items="@ViewBag.Semestre"></select>
                <span asp-validation-for="Semestre" class="text-danger"></span>
            </div>
            <div class="btn-icons" ,>
                <a asp-action="Index" class="i-font-50">
                    <i class="fas fa-chevron-circle-left"></i>
                </a>
                <button class="btn-submit i-font-50"><i class="fas fa-save"></i></button>
            </div>
        </form>
    </div>
</div>
