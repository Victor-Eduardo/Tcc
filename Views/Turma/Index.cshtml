@model IEnumerable<Tcc_Senai.Models.Turma>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/datatables/css/jquery.dataTables.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.18/css/jquery.dataTables.min.css"
              asp-fallback-href="~/lib/datatables/css/jquery.dataTables.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        
    </environment>
   
}
@if (@TempData["Message"] != null)
{ 
    <div class="alert alert-success" role="alert">
        @TempData["Message"]
    </div>
}
<div class="card-block">
    <div class="card-header text-white bg-primary text-center h1">
        Turmas
    </div>
    <div class="col-12 content-view">
        <table id="tabela_turmas" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Curso.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sigla)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ano)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Semestre)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Curso.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sigla)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Ano)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Semestre)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="i-font-20 icone-link"><i class="fas fa-pencil-alt"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="i-font-20 icone-link"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dr-icon icone-link">
        <div class="row">
            <div class="col-6">
                <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
            </div>
            <div class="col-6">
                <a class="btn-modal i-font-50"><i class="far fa-question-circle"></i></a>
            </div>
        </div>
    </div>

    <div class="modal-help">
        <div class="help-content">
            <button class="close-modal">X</button>
            <img class="img-modal" src="~/images/responsivo/img-modal.png" />
        </div>
    </div>

    <script src="~/js/Layout/Index.js"></script>
</div>
@section  ScriptPage {
    <environment include="Development">
        <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="//cdn.datatables.net/1.10.18/js/jquery.dataTables.min.js"
                asp-fallback-src="~/lib/datatables/js/jquery.dataTables.min.js">
        </script>
    </environment>
    <script type="text/javascript">
$(document).ready(function () {
$('#tabela_turmas').DataTable({
"order": [[1, "asc"]]
});
});
    </script>
} 