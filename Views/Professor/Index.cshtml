@model IEnumerable<Tcc_Senai.Models.Professor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<div class="card-header text-white bg-primary text-center h1">
    PROFESSORES 
</div>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Professores</title>
</head>
<body>
    <div class="col-12 content-view">
        <table class="table" >
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeCompleto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PrimeiroNome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TipoDeContrato)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HorarioDeTrabalho)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CargaHorariaSemanal)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeCompleto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PrimeiroNome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipoDeContrato)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HorarioDeTrabalho)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CargaHorariaSemanal)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdProfessor" class="i-font-20 icone-link"><i class="fas fa-pencil-alt"></i></a>
                            <a asp-action="Delete" asp-route-id="@item.IdProfessor" class="i-font-20 icone-link"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dr-icon icone-link">
        <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
    </div>
</body>
</html>
