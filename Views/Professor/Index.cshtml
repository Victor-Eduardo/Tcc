@model IEnumerable<Tcc_Senai.Models.Professor>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<div class="card-body">
    <div class="text-center mb-3 py-2 bg-info-700">
        <h4 class="font-weight-semibold mb-1">PROFESSORES CADASTRADOS</h4>
    </div>


</div>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lista de Professores</title>
</head>
<body>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.NomeCompleto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrimeiroNome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TipoDeContrato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorarioDeTrabalho)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CargaHorariaSemanal)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimeiroNome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoDeContrato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorarioDeTrabalho)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CargaHorariaSemanal)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdProfessor" class="i-font-30 icone-link"><i class="fas fa-pencil-alt"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.IdProfessor" class="i-font-30 icone-link"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="dr-icon icone-link">
        <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
    </div>
</body>
</html>
