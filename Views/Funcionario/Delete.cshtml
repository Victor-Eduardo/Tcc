@model Tcc_Senai.Models.Funcionario

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Deletar Funcionario</title>
</head>
<body>
    <hr />
    <div class="row">
        <div class="col-12 col-sm-12 col-md-6 offset-md-3">
            <h2 class="title-view">Deletar Funcionario</h2>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <dl class="row">
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.NomeCompleto)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.NomeCompleto)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.Horario)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.Horario)
                    </dd>
                    <dt class="col-sm-4">
                        @Html.DisplayNameFor(model => model.CargaHorariaSemanal)
                    </dt>
                    <dd class="col-sm-8">
                        @Html.DisplayFor(model => model.CargaHorariaSemanal)
                    </dd>
                </dl>
                <div class="btn-icons" ,>
                    <a asp-action="Index" class="i-font-50">
                        <i class="fas fa-chevron-circle-left"></i>
                    </a>
                    <button class="btn-submit i-font-50"><i class="fas fa-eraser"></i></button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>