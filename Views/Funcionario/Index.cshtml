@model IEnumerable<Tcc_Senai.Models.Funcionario>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<div class="card-header text-white bg-primary text-center h1">
    Funcionários 
</div>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Funcionários</title>
</head>
<body>
    <div class="col-12 content-view">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeCompleto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Perfil.Nivel)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Contrato.Tipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Horario)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CargaHorariaSemanal)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NomeCompleto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Perfil.Nivel)
                    </td>
                    <td>
                        @Html.DisplayNameFor(model => model.Contrato.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Horario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CargaHorariaSemanal)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="i-font-20 icone-link"><i class="fas fa-pencil-alt"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="i-font-20 icone-link"><i class="fas fa-trash-alt"></i></a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dr-icon icone-link">
        <div class="row">
            <div class="col-6">
                <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
            </div>
            <div class="col-6">
                <a class="btn-modal i-font-50"><i class="far fa-question-circle"></i></a>
            </div>
        </div>
    </div>

    <div class="modal-help">
        <div class="help-content">
            <button class="close-modal">X</button>
            <h3>AJUDA</h3>
            <div class="i-font-20">
                <i class="fas fa-pencil-alt"></i>
                <i class="fas fa-trash-alt"></i>
            </div>
        </div>
    </div>

    <script src="~/js/Layout/Index.js"></script>
</body>
</html>
