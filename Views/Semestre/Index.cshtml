@model IEnumerable<Tcc_Senai.Models.Semestre>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Voltar Lista</title>
</head>
<body>
    <div class="col-12" style="overflow-x: auto;">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NomeSemestre)
                    </th>


                    <th>
                        @Html.DisplayNameFor(model => model.Ano)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomeSemestre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ano)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.IdSemestre" class="i-font-20 icone-link"><i class="fas fa-pencil-alt"></i></a> |

                            <a asp-action="Delete" asp-route-id="@item.IdSemestre" class="i-font-20 icone-link"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="dr-icon icone-link">
        <a asp-action="Create" class="i-font-50"><i class="fas fa-folder-plus"></i></a>
    </div>
</body>
</html>
