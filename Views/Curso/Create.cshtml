@model Tcc_Senai.Models.Curso



@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>

<body>
    <div class="container">

        <div class="col-12 col-sm-12 col-md-6 offset-md-3">
            <h2 class="title-view">Cadastro de Curso</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NomeCurso" class="control-label"></label>

                    <input asp-for="NomeCurso" class="form-control" />
                    <span asp-validation-for="NomeCurso" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdModalidade" class="control-label"></label>
                    <select asp-for="IdModalidade" class="form-control" asp-items="@(new SelectList(@ViewBag.Modalidades, "IdModalidade", "NomeModalidade"))"></select>
                </div>
                <div class="form-group">
                    <label asp-for="IdUc" class="control-label"></label>
                    <select asp-for="IdUc" class="form-control" asp-items="@(new SelectList(@ViewBag.UnidadeCurriculares, "IdUc", "NomeUnidadeCurricular"))"></select>
                </div>
                <div class="form-group">
                    <label asp-for="CargaHoraria" class="control-label"></label>

                    <input asp-for="CargaHoraria" class="form-control" />
                    <span asp-validation-for="CargaHoraria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Sigla" class="control-label"></label>

                    <input asp-for="Sigla" class="form-control" />
                    <span asp-validation-for="Sigla" class="text-danger"></span>
                </div>

                <div class="btn-icons" ,>
                    <a asp-action="Index" class="i-font-50">
                        <i class="fas fa-chevron-circle-left"></i>
                    </a>
                    <button class="btn-submit i-font-50"><i class="fas fa-save"></i></button>
                </div>
            </form>

        </div>

    </div>

  

   @* @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    } *@


</body>
</html>

