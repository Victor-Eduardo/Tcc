@model Tcc_Senai.Models.Curso



@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<!DOCTYPE html>

<html>
<body>
    <div class="container">
        @if (ViewData["MSG_E"] != null)
        {
            <p class="alert alert-danger"> @ViewData["MSG_E"] </p>
        }
        <div class="col-12 col-sm-12 col-md-6 offset-md-3">
            <h2 class="title-view">Cadastrar Curso</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>

                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdMod" class="control-label"></label>
                    <select asp-for="IdMod" class="form-control" asp-items="@(new SelectList(@ViewBag.Modalidades, "Id", "Nome"))"></select>
                </div>

                <div class="form-group">
                    Unidades Curriculares:
                    @Html.DropDownList("UnidadeId", (MultiSelectList)ViewBag.Unidades, new { multiple = "multiple" })
                </div>

                <div class="form-group">
                    <label asp-for="CargaHoraria" class="control-label"></label>

                    <input asp-for="CargaHoraria" class="form-control" />
                    <span asp-validation-for="CargaHoraria" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Sigla" class="control-label"></label>
                    <input asp-for="Sigla" class="form-control" />
                    <span asp-validation-for="Sigla" class="text-danger"></span>
                </div>

                <div class="btn-icons" ,>
                    <a asp-action="Index" class="i-font-50">
                        <i class="fas fa-chevron-circle-left"></i>
                    </a>
                    <button class="btn-submit i-font-50"><i class="fas fa-save"></i></button>
                </div>

            </form>

        </div>

    </div>

  

   @* @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    } *@


</body>
</html>

