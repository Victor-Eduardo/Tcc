@model Tcc_Senai.Models.Curso

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutSenai.cshtml";
}

<div class="row">
    <div class="col-12 col-sm-12 col-md-6 offset-md-3">
        <h2 class="title-view">Alterar Curso</h2>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Nome" class="control-label">
                </label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IdMod" class="control-label"></label>
                <select asp-for="IdMod" class="form-control" asp-items=@ViewBag.Modalidades></select>
            </div>

            <div class="form-group">
                Unidades Curriculares:
                @Html.DropDownList("UnidadeId", (MultiSelectList)ViewBag.Unidades, new { multiple = "multiple" })
            </div>

            <div class="form-group">
                <label asp-for="CargaHoraria" class="control-label">
                </label>
                <input asp-for="CargaHoraria" class="form-control" />
                <span asp-validation-for="CargaHoraria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sigla" class="control-label">
                </label>
                <input asp-for="Sigla" class="form-control" />
                <span asp-validation-for="Sigla" class="text-danger"></span>
            </div>

            <div class="btn-icons" ,>
                <a asp-action="Index" class="i-font-50">
                    <i class="fas fa-chevron-circle-left"></i>
                </a>
                <button class="btn-submit i-font-50"><i class="fas fa-save"></i></button>
            </div>
        </form>
    </div>
</div>
